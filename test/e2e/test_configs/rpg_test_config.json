      "backgrounds": [
        {"name": "village", "path": "assets/2d/rpg/backgrounds/village.png"},
        {"name": "dungeon", "path": "assets/2d/rpg/backgrounds/dungeon.png"},
        {"name": "forest", "path": "assets/2d/rpg/backgrounds/forest.png"}
      ],
      "music": [
        {"name": "town_theme", "path": "assets/audio/music/loops/peaceful_town.mp3"},
        {"name": "battle_theme", "path": "assets/audio/music/loops/battle.mp3"},
        {"name": "dungeon_theme", "path": "assets/audio/music/loops/dungeon.mp3"}
