      "welcome",
      "choose_game_type",
      "title_screen_setup",
      "character_creation",
      "movement_style",
      "combat_system",
      "inventory_setup",
      "dialogue_system",
      "npc_creation",
      "enemy_design",
      "world_building",
      "quest_setup",
      "ending_configuration",
      "compile_and_test",
      "export_game"
