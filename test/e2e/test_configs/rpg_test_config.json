      "enemies": [
        {
          "type": "goblin",
          "sprite": "enemy_goblin.png",
          "health": 30,
          "damage": 5,
          "loot": ["gold", "potion"]
        },
        {
          "type": "dragon",
          "sprite": "enemy_dragon.png",
          "health": 500,
          "damage": 25,
          "boss": true
        }
      ]
    },
    "assets": {
      "sprites": [
        {"name": "hero", "path": "assets/2d/rpg/characters/hero.png"},
