{
  "game_type": "rpg",
  "description": "Test configuration for RPG game creation flow",
  "stages": {
    "title_screen": {
      "title": "Quest of Legends",
      "font": "medieval",
      "background": "#1A1A2E",
      "music": "epic_orchestral.mp3",
      "style": "fantasy",
      "buttons": ["New Game", "Continue", "Settings", "Credits", "Quit"]
    },
    "gameplay": {
      "player": {
        "sprite": "hero_knight.png",
        "speed": 4,
        "health": 100,
        "mana": 50,
        "stats": {
          "strength": 10,
          "defense": 8,
          "magic": 5,
          "agility": 7
        },
        "animations": ["idle", "walk", "attack", "cast", "hurt", "death"]
      },
      "inventory": {
        "slots": 20,
        "categories": ["weapons", "armor", "potions", "quest_items"],
        "starting_items": ["wooden_sword", "health_potion"],
        "equipment_slots": ["weapon", "armor", "accessory"]
