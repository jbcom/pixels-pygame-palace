# Flask Backend Configuration
FLASK_ENV=development
FLASK_SECRET_KEY=your-secret-key-here
PORT=5001

# Game Configuration
MAX_CONCURRENT_SESSIONS=10
MAX_SESSION_TIME=300
MAX_CODE_SIZE=50000
STREAM_FPS=15

# Rate Limiting
RATE_LIMIT_GENERAL=100
RATE_LIMIT_EXECUTION=10
RATE_LIMIT_STRICT=20

# JWT Authentication (should match Express backend)
JWT_SECRET=shared-secret-between-express-and-flask

# Docker Configuration (optional)
USE_DOCKER=false
FORCE_DOCKER_EXECUTION=false