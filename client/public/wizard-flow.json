    "assetSelected": {
      "id": "assetSelected",
      "speaker": "Pixel",
      "text": "Great choice! Now let's add some interactivity. What should happen when the player starts?",
      "options": [
        {
          "text": "Add player controls",
          "next": "playerControls"
        },
        {
          "text": "Set up the game world",
          "next": "worldSetup"
        },
        {
          "text": "Configure game rules",
          "next": "gameRules"
        }
      ]
    },
    "playerControls": {
      "id": "playerControls",
      "speaker": "Pixel",
      "conditionalText": {
        "gameType": {
          "platformer": "In platformers, movement is everything! Let's set up jumping and running mechanics!",
          "rpg": "RPG controls are about exploration and interaction. Let's configure your character movement!",
          "racing": "Racing is all about speed and precision! Let's tune your vehicle controls!",
          "default": "Let's get your controls set up so you can interact with the game!"
        }
      },
      "conditionalAction": {
        "gameType": {
          "platformer": { "action": "setupControls", "params": { "type": "platformer" } },
          "rpg": { "action": "setupControls", "params": { "type": "rpg" } },
          "racing": { "action": "setupControls", "params": { "type": "racing" } },
          "default": { "action": "setupControls", "params": { "type": "default" } }
        }
      },
      "next": "projectComplete"
    },
    "worldSetup": {
      "id": "worldSetup",
      "speaker": "Pixel",
      "text": "Time to build your game world! This is where the magic happens!",
      "conditionalFollowUp": {
        "gameType": {
          "platformer": "Platformers need great level design with platforms, obstacles, and collectibles!",
          "rpg": "RPG worlds are vast and full of stories. Let's create your first area!"
        }
      },
      "action": "buildWorld",
      "next": "projectComplete"
    },
    "gameRules": {
      "id": "gameRules",
      "speaker": "Pixel",
      "text": "Every game needs rules! Let's define how players win, lose, and progress!",
      "options": [
        {
          "text": "Simple rules - Just the basics",
          "action": "setRules",
          "actionParams": { "complexity": "simple" },
          "next": "projectComplete"
        },
        {
          "text": "Complex rules - Full game mechanics",
          "action": "setRules",
          "actionParams": { "complexity": "complex" },
          "next": "projectComplete"
        }
      ]
    },
    "projectComplete": {
