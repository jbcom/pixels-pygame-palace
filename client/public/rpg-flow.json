{
  "start": {
    "id": "start",
    "speaker": "Pixel",
    "text": "An RPG adventure awaits! Let's craft an epic game with meaningful choices that shape your world. First, let's choose your universe!",
    "followUp": "Every choice you make will bundle matching assets and mechanics. Choose your setting!",
    "action": "showComponentChoice",
    "actionParams": {
      "componentId": "worldSetting",
      "category": "theme"
    },
    "options": [
      {
        "text": "A: Fantasy Realm - Swords, magic, dragons, and ancient kingdoms",
        "action": "selectComponentVariant",
        "actionParams": { 
          "componentId": "worldSetting", 
          "variant": "A",
          "bundle": ["fantasy_bg", "medieval_tiles", "orchestral_music", "sword_combat"]
        },
        "next": "projectSetup"
      },
      {
        "text": "B: Sci-Fi Universe - Lasers, tech, aliens, and space colonies",
        "action": "selectComponentVariant",
        "actionParams": { 
          "componentId": "worldSetting", 
          "variant": "B",
          "bundle": ["scifi_bg", "tech_tiles", "synth_music", "laser_combat"]
        },
        "next": "projectSetup"
      }
    ]
  },
  "projectSetup": {
    "id": "projectSetup",
    "speaker": "Pixel",
    "text": "Excellent setting! Now let's give your RPG a legendary name. What shall we call this epic adventure?",
    "options": [
      {
        "text": "A: Let me type my own game name",
        "action": "promptGameName",
        "next": "titlePresentation"
      },
      {
        "text": "B: Generate an epic name based on my world",
        "action": "generateGameName",
        "actionParams": { "gameType": "rpg" },
        "next": "titlePresentation"
      }
    ]
  },
