{
  "name": "pixels-pygame-palace-workspace",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo workspace for Pixels Pygame Palace",
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "postinstall": "npm run install:backend",
    "install:backend": "cd apps/backend && uv sync",
    "dev": "concurrently -n 'backend,server,vite' -c 'yellow,cyan,green' 'npm:dev:python' 'npm:dev:server' 'npm:dev:client'",
    "dev:python": "cd apps/backend && python app.py",
    "dev:server": "NODE_ENV=development tsx apps/server/index.ts",
    "dev:client": "cd apps/frontend && vite",
    "build": "npm run build:client && npm run build:server && npm run build:python",
    "build:client": "cd apps/frontend && vite build",
    "build:server": "esbuild apps/server/index.ts --platform=node --packages=external --bundle --format=esm --outdir=dist",
    "build:python": "cd apps/backend && uv sync --frozen",
    "start": "concurrently -n 'backend,server' -c 'yellow,cyan' 'npm:start:python' 'npm:start:server'",
    "start:python": "cd apps/backend && gunicorn app:app -k eventlet -w 1 -b 0.0.0.0:5001 --timeout 120",
    "start:server": "NODE_ENV=production node dist/index.js",
    "test": "npm run test:all",
    "test:all": "concurrently -n 'frontend,python,e2e' -c 'cyan,yellow,magenta' 'npm:test:frontend' 'npm:test:python' 'npm:test:e2e'",
    "test:python": "cd apps/backend && pytest",
    "test:frontend": "cd apps/frontend && vitest",
    "test:e2e": "playwright test",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd apps/frontend && eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:backend": "cd apps/backend && ruff check .",
    "format": "npm run format:frontend && npm run format:backend",
    "format:frontend": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:backend": "cd apps/backend && ruff format .",
    "typecheck": "npm run typecheck:frontend && npm run typecheck:server",
    "typecheck:frontend": "cd apps/frontend && tsc --noEmit",
    "typecheck:server": "cd apps/server && tsc --noEmit",
    "clean": "npm run clean:deps && npm run clean:build",
    "clean:deps": "rm -rf node_modules apps/*/node_modules packages/*/node_modules apps/backend/.venv",
    "clean:build": "rm -rf dist apps/*/dist coverage .pytest_cache .turbo"
  },
  "devDependencies": {
    "@playwright/test": "^1.55",
    "concurrently": "^9.2.1",
    "esbuild": "^0.25.10",
    "prettier": "^3.6",
    "tsx": "^4.19",
    "typescript": "~5.6"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}