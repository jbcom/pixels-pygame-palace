{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://pixel-pygame-palace.com/schemas/mechanic.json",
  "title": "Game Mechanic Schema",
  "description": "Schema for game mechanics that define systems and behaviors",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the mechanic",
      "pattern": "^[a-z][a-z0-9-]*$"
    },
    "name": {
      "type": "string",
      "description": "Human-readable name of the mechanic"
    },
    "description": {
      "type": "string",
      "description": "Detailed description of what the mechanic provides"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version of the mechanic"
    },
    "category": {
      "type": "string",
      "enum": ["movement", "combat", "physics", "ai", "audio", "visual", "ui", "gameplay", "custom"],
      "description": "Category of the mechanic"
    },
    "systems": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for this system"
          },
          "name": {
            "type": "string",
            "description": "Name of the system"
          },
          "description": {
            "type": "string",
            "description": "What this system does"
          },
          "priority": {
            "type": "integer",
            "minimum": 0,
            "maximum": 100,
            "default": 50,
            "description": "Execution priority (0=first, 100=last)"
          },
          "updateOrder": {
            "type": "string",
            "enum": ["pre_update", "update", "post_update", "render", "gui"],
            "default": "update",
            "description": "When in the game loop this system runs"
          },
          "requiredComponents": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Component IDs that entities must have to use this system"
          },
          "configuration": {
            "type": "object",
            "description": "System-specific configuration options"
          }
        },
        "required": ["id", "name", "description"]
      },
      "description": "Systems that implement this mechanic"
    },
    "configuration": {
      "type": "object",
      "properties": {
        "globalSettings": {
          "type": "object",
          "description": "Global settings that apply to the entire mechanic"
        },
        "componentDefaults": {
          "type": "object",
          "description": "Default parameter values for components using this mechanic"
        },
        "systemSettings": {
          "type": "object",
          "description": "Settings specific to individual systems"
        }
      },
      "description": "Configuration options for the mechanic"
    },
    "requiredComponents": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Component IDs that must be available to use this mechanic"
    },
    "compatibleComponents": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Component IDs that work well with this mechanic"
    },
    "conflictsWith": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Mechanic IDs that conflict with this one"
    },
    "events": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "description": { "type": "string" },
          "parameters": { "type": "object" }
        },
        "required": ["name", "description"]
      },
      "description": "Events that this mechanic can emit"
    },
    "tags": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Tags for searching and filtering mechanics"
    },
    "buildTargets": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["desktop", "web", "mobile"]
      },
      "description": "Which platforms this mechanic supports",
      "default": ["desktop", "web"]
    },
    "documentation": {
      "type": "object",
      "properties": {
        "usage": { "type": "string" },
        "examples": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "title": { "type": "string" },
              "description": { "type": "string" },
              "configuration": { "type": "object" }
            }
          }
        }
      }
    },
    "createdAt": {
      "type": "string",
      "format": "date-time"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time"
    }
  },
  "required": [
    "id",
    "name",
    "description",
    "version",
    "category",
    "systems"
  ]
}