[
  {
    "id": "desktop",
    "name": "Desktop",
    "description": "Native desktop applications for Windows, macOS, and Linux with full system access and performance",
    "platform": {
      "os": ["windows", "macos", "linux"],
      "architecture": ["x86", "x64", "arm64"],
      "minVersion": "Windows 10, macOS 10.14, Ubuntu 18.04"
    },
    "capabilities": {
      "graphics": {
        "hardware2D": true,
        "hardware3D": true,
        "shaders": true,
        "maxTextureSize": 8192,
        "multipleWindows": true
      },
      "audio": {
        "stereo": true,
        "surround": true,
        "streaming": true,
        "synthesis": true,
        "formats": ["wav", "mp3", "ogg", "flac", "aac"]
      },
      "input": {
        "keyboard": true,
        "mouse": true,
        "touch": false,
        "gamepad": true,
        "accelerometer": false,
        "gyroscope": false
      },
      "storage": {
        "localStorage": true,
        "fileSystem": true,
        "persistent": true
      },
      "network": {
        "http": true,
        "websockets": true,
        "udp": true,
        "p2p": true
      },
      "performance": {
        "multithreading": true,
        "webWorkers": false,
        "simd": true,
        "jit": true
      }
    },
    "constraints": {
      "sandboxed": false,
      "requiresPermissions": [],
      "blockedAPIs": []
    },
    "buildSettings": {
      "compiler": "pygame-native",
      "outputFormat": "executable",
      "optimization": "balanced",
      "compression": true
    },
    "runtime": {
      "engine": "pygame",
      "version": "2.5.0",
      "dependencies": ["python", "sdl2", "opengl"]
    },
    "deployment": {
      "distribution": ["direct", "store", "package_manager"],
      "signing": true,
      "autoUpdate": true
    }
  },
  {
    "id": "web",
    "name": "Web Browser",
    "description": "Browser-based games using WebAssembly for near-native performance with wide compatibility",
    "platform": {
      "os": ["browser"],
      "architecture": ["wasm"],
      "minVersion": "Chrome 80+, Firefox 75+, Safari 13+, Edge 80+"
    },
    "capabilities": {
      "graphics": {
        "hardware2D": true,
        "hardware3D": true,
        "shaders": true,
        "maxTextureSize": 4096,
        "multipleWindows": false
      },
      "audio": {
        "stereo": true,
        "surround": false,
        "streaming": true,
        "synthesis": true,
        "formats": ["wav", "mp3", "ogg", "aac"]
      },
      "input": {
        "keyboard": true,
        "mouse": true,
        "touch": true,
        "gamepad": true,
        "accelerometer": true,
        "gyroscope": true
      },
      "storage": {
        "localStorage": true,
        "fileSystem": false,
        "maxLocalStorage": 50,
        "persistent": true
      },
      "network": {
        "http": true,
        "websockets": true,
        "udp": false,
        "p2p": false
      },
      "performance": {
        "multithreading": false,
        "webWorkers": true,
        "simd": true,
        "jit": false
      }
    },
    "constraints": {
      "maxMemoryMB": 256,
      "maxFileSizeMB": 100,
      "sandboxed": true,
      "requiresPermissions": ["audio", "fullscreen", "gamepad"],
      "blockedAPIs": ["file_system", "native_sockets", "system_calls"]
    },
    "buildSettings": {
      "compiler": "pygbag",
      "outputFormat": "wasm",
      "optimization": "size",
      "compression": true
    },
    "runtime": {
      "engine": "pygame-web",
      "version": "2.4.0-wasm",
      "dependencies": ["pygbag", "asyncio", "webassembly"]
    },
    "deployment": {
      "distribution": ["web"],
      "signing": false,
      "autoUpdate": true
    }
  },
  {
    "id": "mobile",
    "name": "Mobile",
    "description": "Native mobile applications for iOS and Android with touch controls and mobile-optimized performance",
    "platform": {
      "os": ["ios", "android"],
      "architecture": ["arm", "arm64"],
      "minVersion": "iOS 12+, Android 7.0 (API 24)"
    },
    "capabilities": {
      "graphics": {
        "hardware2D": true,
        "hardware3D": true,
        "shaders": true,
        "maxTextureSize": 2048,
        "multipleWindows": false
      },
      "audio": {
        "stereo": true,
        "surround": false,
        "streaming": true,
        "synthesis": true,
        "formats": ["wav", "mp3", "aac", "ogg"]
      },
      "input": {
        "keyboard": false,
        "mouse": false,
        "touch": true,
        "gamepad": false,
        "accelerometer": true,
        "gyroscope": true
      },
      "storage": {
        "localStorage": true,
        "fileSystem": true,
        "maxLocalStorage": 100,
        "persistent": true
      },
      "network": {
        "http": true,
        "websockets": true,
        "udp": false,
        "p2p": false
      },
      "performance": {
        "multithreading": true,
        "webWorkers": false,
        "simd": false,
        "jit": true
      }
    },
    "constraints": {
      "maxMemoryMB": 128,
      "maxFileSizeMB": 200,
      "sandboxed": true,
      "requiresPermissions": ["audio", "vibrate", "network", "storage"],
      "blockedAPIs": ["system_files", "raw_sockets"]
    },
    "buildSettings": {
      "compiler": "pygame-mobile",
      "outputFormat": "apk/ipa",
      "optimization": "balanced",
      "compression": true
    },
    "runtime": {
      "engine": "pygame-mobile",
      "version": "2.3.0-mobile",
      "dependencies": ["kivy", "pyjnius", "pyobjus"]
    },
    "deployment": {
      "distribution": ["store"],
      "signing": true,
      "autoUpdate": false
    }
  }
]